<Window x:Class="CarAdminApp.AutosBekijkenWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Auto's Bekijken" Height="300" Width="400">
    <Grid>
        <TextBlock Text="Lijst van Auto's" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,20,0,0"/>
        <ListView x:Name="AutoListView" Margin="10,50,10,40">
            <!-- Voorbeelditems, deze moeten dynamisch toegevoegd worden -->
            <ListViewItem Content="Volkswagen Golf"/>
            <ListViewItem Content="BMW 320i"/>
        </ListView>
        <Button Content="Sluiten" HorizontalAlignment="Center" VerticalAlignment="Bottom" Click="Sluiten_Click"/>
    </Grid>
</Window>
