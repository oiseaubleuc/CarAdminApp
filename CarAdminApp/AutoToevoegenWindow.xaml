<Window x:Class="CarAdminApp.AutoToevoegenWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Auto Toevoegen" Height="300" Width="400">
    <Grid>
        <TextBlock Text="Voeg een nieuwe auto toe" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,20,0,0"/>

        <TextBox x:Name="MerkTextBox" Width="200" Margin="10" PlaceholderText="Merk"/>
        <TextBox x:Name="ModelTextBox" Width="200" Margin="10,40,10,0" PlaceholderText="Model"/>
        <TextBox x:Name="PrijsTextBox" Width="200" Margin="10,80,10,0" PlaceholderText="Prijs"/>

        <Button Content="Toevoegen" Width="100" Height="30" Margin="10,120,10,0" Click="Toevoegen_Click"/>
        <Button Content="Sluiten" Width="100" Height="30" Margin="120,120,10,0" Click="Sluiten_Click"/>
    </Grid>
    <Grid>
        <TextBox x:Name="MerkTextBox" Width="200" Margin="10" PlaceholderText="Merk"/>
        <TextBox x:Name="ModelTextBox" Width="200" Margin="10,40,10,0" PlaceholderText="Model"/>
        <TextBox x:Name="PrijsTextBox" Width="200" Margin="10,80,10,0" PlaceholderText="Prijs"/>
        <Button Content="Voeg Auto Toe" Width="100" Height="30" Margin="10,120,10,0" Click="VoegAutoToe_Click"/>
    </Grid>

</Window>
