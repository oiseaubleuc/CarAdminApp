<Window x:Class="CarAdminApp.KlantenBeherenWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Klanten Beheren" Height="300" Width="400">
    <Grid>
        <TextBlock Text="Beheer Klanten" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,20,0,0"/>

        <TextBox x:Name="KlantNaamTextBox" Width="200" Margin="10" PlaceholderText="Klantnaam"/>

        <Button Content="Klant Toevoegen" Width="100" Height="30" Margin="10,50,10,0" Click="KlantToevoegen_Click"/>
        <Button Content="Sluiten" Width="100" Height="30" Margin="120,50,10,0" Click="Sluiten_Click"/>
    </Grid>
</Window>
